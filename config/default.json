{
  "api": {
    "port": 3000
  },
  "db": {
    "connection": "mongodb://localhost/baby-gear",
    "options": {
      "useCreateIndex": true,
      "useNewUrlParser": true,
      "useUnifiedTopology": true,
      "useFindAndModify": false
    }
  },
  "jwt": {
    "options": {
      "expiresIn": 365000
    }
  },
  "validation": {
    "options": {
      "abortEarly": true,
      "allowUnknown": true,
      "convert": true
    },
    "product": {
      "status": ["active", "deleted", "not-available"],
      "condition": ["new", "very good","good", "acceptable"]
    },
    "cardTypes": ["au_becs_debit", "card", "fpx", "ideal", "sepa_debit"]
  },
  "image": {
    "validMimes": [ "image/jpeg", "image/png", "image/svg+xml", "image/gif", "image/webp" ]
  }
}
